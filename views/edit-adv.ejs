<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (adv) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="aid">AD ID</label>
                    <input type="text" class="form-control" name="aid" id="aid"  value="<%= adv.aid %>" required>
                </div>
                

                    <div class="form-group col-md-4">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title" id="title"  value="<%= adv.title%>" required>
                    </div>
                
                    <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="company">company</label>
                                <input type="text" class="form-control" name="company" id="company"  value="<%= adv.company%>" required>
                            </div>
    
                    
                            <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="company">details</label>
                                        <input type="text" class="form-control" name="details" id="details"  value="<%= adv.details%>" required>
                                    </div>
            
            <button type="submit" class="btn btn-success float-right">Update AD</button>
        </form>
    <% } else { %>
        <p class="text-center">Category Not Found. Go <a href="/">Back</a> to main page</p>
    <% } %>
</div>

</body>
</html>